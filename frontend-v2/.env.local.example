# Stellar Network Configuration
NEXT_PUBLIC_STELLAR_NETWORK=testnet # or mainnet

# Soroban RPC URL
NEXT_PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Contract Addresses (update these with your deployed contracts)
NEXT_PUBLIC_STOP_LOSS_CONTRACT=YOUR_CONTRACT_ADDRESS_HERE
NEXT_PUBLIC_REFLECTOR_EXTERNAL_ORACLE=YOUR_ORACLE_ADDRESS_HERE
NEXT_PUBLIC_REFLECTOR_STELLAR_ORACLE=YOUR_STELLAR_ORACLE_ADDRESS_HERE
NEXT_PUBLIC_REFLECTOR_FOREX_ORACLE=YOUR_FOREX_ORACLE_ADDRESS_HERE

# Development Mode (set to true to use dev keys instead of wallet)
NEXT_PUBLIC_USE_DEV_KEY=false
NEXT_PUBLIC_DEV_PUBLIC_KEY=YOUR_DEV_PUBLIC_KEY
NEXT_PUBLIC_DEV_SECRET_KEY=YOUR_DEV_SECRET_KEY # Only for testing!


